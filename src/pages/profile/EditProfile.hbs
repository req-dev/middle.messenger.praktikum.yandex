<div class="profile-page">
    <div class="profile-page__back-btn">
        <div class="profile-page__back-btn-icon">
            <svg xmlns="http://www.w3.org/2000/svg" class="profile-page__back-btn-icon-svg" viewBox="0 -960 960 960" fill="#FFFFFF"><path d="m313-440 224 224-57 56-320-320 320-320 57 56-224 224h487v80H313Z"/></svg>
        </div>
    </div>
    <div class="profile-page__body">
        <div class="profile-page__body-center">
            <form class="profile-page__body-center">
                <div class="profile-page__body-avatar">
                    <div class="profile-page__body-avatar-hint">
                        <div class="profile-page__body-avatar-hint-text">Change Avatar</div>
                    </div>
                    <input class="profile-page__body-avatar-input" type="file" name="avatar" accept="image/png, image/jpeg">
                </div>
                <h1 class="profile-page__body-name">Scott</h1>

                <div class="profile-page__body-card">
                    <label for="email" class="profile-page__body-card-item-property">Email</label>
                    <input type="email" id="email" name="email" placeholder="ivan@gmail.com" value="pochta@yandex.ru" class="profile-page__body-card-item-property-value">

                    <label for="login" class="profile-page__body-card-item-property">Login</label>
                    <input type="text" id="login" name="login" placeholder="ivan" value="ivanivanov" class="profile-page__body-card-item-property-value">

                    <label for="first_name" class="profile-page__body-card-item-property">First name</label>
                    <input type="text" id="first_name" name="first_name" placeholder="Иван" value="Иван" class="profile-page__body-card-item-property-value">

                    <label for="second_name" class="profile-page__body-card-item-property">Second name</label>
                    <input type="text" id="second_name" name="second_name" placeholder="Иванов" value="Иванов" class="profile-page__body-card-item-property-value">

                    <label for="display_name" class="profile-page__body-card-item-property">Nickname in Chats</label>
                    <input type="text" id="display_name" name="display_name" placeholder="Иван" value="Иван" class="profile-page__body-card-item-property-value">

                    <label for="phone" class="profile-page__body-card-item-property">Phone</label>
                    <input type="text" id="phone" name="phone" placeholder="+7 (909) 967 30 30" value="+7 (909) 967 30 30" class="profile-page__body-card-item-property-value">
                </div>
            </form>

            <div class="page__body-space-after-cards"></div>

            {{> Button id="saveBtn" text="Save changes" }}
        </div>
    </div>
</div>

<div class="profile-page">
    <div class="profile-page__back-btn">
        <div class="profile-page__back-btn-icon">
            <svg xmlns="http://www.w3.org/2000/svg" class="profile-page__back-btn-icon-svg" viewBox="0 -960 960 960"
                 fill="#FFFFFF">
                <path d="m313-440 224 224-57 56-320-320 320-320 57 56-224 224h487v80H313Z"/>
            </svg>
        </div>
    </div>
    <div class="profile-page__body">
        <div class="profile-page__body-center">
            <form class="profile-page__body-center">
                <div class="profile-page__body-avatar">
                    <div class="profile-page__body-avatar-hint">
                        <div class="profile-page__body-avatar-hint-text">Change Avatar</div>
                    </div>
                    <input class="profile-page__body-avatar-input" type="file" name="avatar" accept="image/png, image/jpeg">
                </div>
                <h1 class="profile-page__body-name">Scott</h1>

                <div class="profile-page__body-card">
                    <label for="oldPassword" class="profile-page__body-card-item-property">Old password</label>
                    <input type="password" id="oldPassword" name="oldPassword" placeholder="•••••••••" value="asSB&&h78uHDd3" class="profile-page__body-card-item-property-value">

                    <label for="newPassword" class="profile-page__body-card-item-property">New password</label>
                    <input type="password" id="newPassword" name="newPassword" placeholder="•••••••••••" value="asSB&&h78uHDd3sady7" class="profile-page__body-card-item-property-value">

                    <label for="repeatNewPassword" class="profile-page__body-card-item-property">Repeat new password</label>
                    <input type="password" id="repeatNewPassword" name="repeatNewPassword" placeholder="•••••••••••" value="asSB&&h78uHDd3sady7" class="profile-page__body-card-item-property-value">
                </div>
            </form>

            <div class="page__body-space-after-cards"></div>

            {{> Button id="saveBtn" text="Save changes" }}
        </div>
    </div>
</div>

.chats-page__dialog-area-msgs-message-container {
    display: flex;
    margin: 5px 0;
}

.chats-page__dialog-area-msgs-message {
    display: flex;
    align-items: end;
    border-radius: 12px;
    background-color: var(--color-near-bkg);
    padding: 11px;
    max-width: 650px;
    margin-right: auto;
}

.chats-page__dialog-area-msgs-message_from-me {
    background-color: var(--color-accent-element);
    margin-right: unset;
    margin-left: auto;
}

.chats-page__dialog-area-msgs-message-text {
    font-family: Inter, sans-serif;
    font-weight: 500;
    line-height: 150%;
    font-size: 12px;
    color: #fff;
}

.chats-page__dialog-area-msgs-message-read-mark {
    display: none;
    height: 4px;
    margin-left: 14px;
}

.chats-page__dialog-area-msgs-message_from-me .chats-page__dialog-area-msgs-message-read-mark {
    display: block;
}

.chats-page__dialog-area-msgs-message-date {
    font-family: Inter, sans-serif;
    font-weight: 500;
    line-height: 100%;
    font-size: 9px;
    margin-left: 14px;
    color: var(--color-non-accent-text);
    text-align: right;
}

.chats-page__dialog-area-msgs-message_from-me .chats-page__dialog-area-msgs-message-date {
    color: var(--color-accent);
    margin-left: 4px;
}

.spinner {
    display: flex;
    width: 100%;
}

.spinner__svg {
    height: 24px;
    margin: auto;
    width: 24px;
}

.spinner__svg-path {
    animation: spinner-icon-animation .75s infinite linear;
    transform-origin: center
}

@keyframes spinner-icon-animation {
    100% {
        transform: rotate(360deg)
    }
}

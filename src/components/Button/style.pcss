.button{
    width: 100%;
    border-radius: 8px;
    font-size: 13px;
    font-family: "Inter", sans-serif;
    line-height: 100%;
    font-weight: 500;
    background: var(--color-accent);
    color: #fff;
    outline: none;
    border: none;
    padding: 12px 0;
    cursor: pointer;
    margin: 4px 0;
}
.button_dark{
    background: var(--color-accent-element);
    color: var(--color-accent);
}
.button:hover{
    filter: brightness(93%);
}
.button:active{
    filter: brightness(70%);
}
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "src/"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "jest.config.ts",
    ".eslintrc.cjs",
    ".eslintignore"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".idea"
  ]
}
